{
  "name": "ccprompts-pipeline",
  "sdk": "python",
  "dependencies": [
    "dagger-io>=0.9.0",
    "pydantic>=2.0.0",
    "typer>=0.9.0",
    "rich>=13.0.0"
  ],
  "source": ".",
  "engines": {
    "dagger": ">=0.9.0"
  },
  "schema": {
    "functions": [
      {
        "name": "lint",
        "description": "Run markdown linting and formatting checks",
        "return_type": "bool"
      },
      {
        "name": "security",
        "description": "Perform comprehensive security scanning",
        "return_type": "bool"
      },
      {
        "name": "validate",
        "description": "Validate prompt structures and command definitions",
        "return_type": "bool"
      },
      {
        "name": "test",
        "description": "Test command accessibility and functionality",
        "return_type": "bool"
      },
      {
        "name": "build",
        "description": "Build and optimize development containers",
        "return_type": "Container"
      },
      {
        "name": "deploy",
        "description": "Deploy to development/staging environments",
        "return_type": "bool"
      }
    ]
  },
  "experimental": {
    "cache": {
      "enabled": true,
      "ttl": "24h"
    },
    "parallel": {
      "enabled": true,
      "max_workers": 4
    }
  }
}