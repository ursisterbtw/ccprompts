{
  "project": {
    "name": "ccprompts",
    "description": "Comprehensive Claude Code Developer Prompts Collection",
    "version": "1.0.0"
  },
  "settings": {
    "extended_thinking": "always",
    "permission_mode": "acceptEdits",
    "allowed_tools": ["Read", "Write", "Edit", "Bash", "LS", "Grep", "Glob"],
    "auto_commit": false,
    "backup_enabled": true,
    "mcp_enabled": true,
    "mcp_timeout": 30000,
    "mcp_retry": 3,
  "validation": {
    "enabled": true,
    "strict_mode": false,
    "command_count_validation": true,
    "expected_command_count": 73
  },
  "performance": {
      "discovery_timeout": 100,
      "validation_timeout": 2000,
      "cache_enabled": true
    },
    "safety": {
      "container_isolation": true,
      "dangerous_command_validation": true,
      "security_scanning": true
    }
  },
  "conventions": {
    "commit_format": "conventional",
    "branch_naming": "feature/{category}-{description}",
    "pr_template": true
  },
  "directories": {
    "prompts": "prompts/",
    "commands": ".claude/commands/",
    "workflows": ".claude/workflows/"
  },
  "mcp": {
    "config_file": ".claude/mcp.json",
    "test_script": ".claude/test-mcp.js",
    "servers": {
      "github": "Repository operations and PR management",
      "markdown-processor": "Documentation processing",
      "documentation-generator": "Auto-generated docs",
      "prompt-validator": "Prompt quality validation",
      "code-quality": "Code analysis and metrics",
      "sequential-thinking": "Enhanced reasoning",
      "memory": "Context persistence"
    }
  },
  "prompt_categories": [
    "01-project-initialization",
    "02-code-analysis", 
    "03-refactoring",
    "04-testing",
    "05-documentation",
    "06-git-workflows",
    "07-multi-file-operations",
    "08-mcp-integration",
    "09-build-deployment",
    "10-security-compliance"
  ],
  "command_phases": [
    "00-initial-workflow",
    "01-project-setup",
    "02-development",
    "03-security",
    "04-testing",
    "05-deployment",
    "06-collaboration",
    "07-utilities",
    "08-extras",
    "09-agentic-capabilities",
    "10-ai-native-development",
    "11-enterprise-scale"
  ],
  "agentic_features": {
    "mcp_integration": {
      "enabled": true,
      "server_discovery": true,
      "auto_installation": true,
      "security_validation": true
    },
    "multi_agent": {
      "orchestration": true,
      "parallel_execution": true,
      "context_sharing": true,
      "quality_assurance": true
    },
    "ai_native_development": {
      "pair_programming": true,
      "code_understanding": true,
      "predictive_development": true,
      "architecture_assistance": true
    },
    "enterprise_features": {
      "governance": true,
      "compliance": true,
      "scalability": true,
      "audit_trails": true
    }
  }
}