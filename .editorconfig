# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default for all files
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.js]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 4
insert_final_newline = true
